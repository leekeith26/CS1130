<script>
    function FahrenheitToCelcius()
    {
        var Celcius, Fahrenheit;
        Fahrenheit = document.getElementById("Fahrenheit").value*1;

        Celcius = (Fahrenheit - 32) * 5 / 9;
        document.getElementById("Celcius").value = Celcius;
    }
</script>

